{
  "plugins": ["latex2"],
  "rules": {
    // 技術文書向けのtextlintルールプリセット
    "preset-ja-technical-writing": {
      "sentence-length": {
        // 1文の長さ
        "max": 90
      },
      "max-kanji-continuous-len": {
        "max": 20,
        // 連続漢字の例外リスト
        "allow": []
      }
    },
    // JTF日本語標準スタイルガイド
    "preset-jtf-style": true,
    "spellcheck-tech-word": true,
    "preset-ja-spacing": true
  }
}
